<%= form_with(model: @room, local: true) do |room| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= room.label :name, "物件名" %>
    <%= room.text_field :name %>
  </div>

  <div class="field">
    <%= room.label :rent, "賃料" %>
    <%= room.number_field :rent %>
  </div>

  <div class="field">
    <%= room.label :adress, "住所" %>
    <%= room.text_field :adress %>
  </div>

  <div class="field">
    <%= room.label :age, "築年数" %>
    <%= room.number_field :age %>
  </div>

  <div class="field">
    <%= room.label :note, "備考" %>
    <%= room.text_area :note %>
  </div>

  <% n = 0 %>
  <%= room.fields_for :stations do |station| %>
    <div class="field" id="field_top">
      <h4 >最寄り駅<%= n+= 1 %></h4>
        <%= station.label :route_name, "路線名" %>
        <%= station.text_field :route_name %>
        <%= station.label :station_name, "駅名" %>
        <%= station.text_field :station_name %>
        <%= station.label :minutes, "徒歩分数" %>
        <%= station.number_field :minutes %>
    </div>
  <% end %>

  <div class="actions">
    <%= room.submit %>
  </div>
<% end %>
